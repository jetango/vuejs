@import "variable.styl"

body, html
  line-height: 1
  font-family:  "STHeiti", "Helvetica Neue", Helvetica, Arial, "Microsoft Yahei", "Hiragino Sans GB", "WenQuanYi Micro Hei", sans-serif
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: #525252

body
  font-size: .28rem

.flex
  display: -webkit-box
  display: -ms-flexbox
  display: flex

.column
  flex-direction: column

.flex-item
  -webkit-box-align: center
  -ms-flex-align: center
  align-items: center

.flex-justify
  -webkit-box-pack: center
  -ms-flex-pack: center
  justify-content: center

.flex-grow
  -webkit-box-flex: 1
  -ms-flex-positive: 1
  flex-grow: 1
  flex: 1

.active
  position: relative
  &:after
    position: absolute
    bottom: 0
    left: .4rem
    right: 0
    content: ''
    height: 1px
    background-color:#e8e8e8
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5)

.text-left
  text-align: left
.text-right
  text-align: right
.text-center
  text-align: center

.button
  display: block
  height: .8rem
  text-align: center
  border-radius: .36rem
  line-height: .8rem
  font-size: .3rem
  &.button-primary
    background: -moz-linear-gradient(left, #ffb71c, #ff8400)
    background: -webkit-gradient(linear, 0 50%, 100% 50%, from(#ffb71c), to(#ff8400))
    background: -o-linear-gradient(left, #ffb71c, #ff8400)
    background: -webkit-linear-gradient(left, #ffb71c, #ff8400)
    box-shadow: 0 2px 10px #ff8400
    color: #fff

.list-view
  background: #fff
  .item
    position: relative
    line-height: 1rem
    height: 1rem
    margin-left: .4rem
    padding-right: .4rem
    &:after
      position: absolute
      bottom: 0
      left: 0
      right: 0
      content: ''
      height: 1px
      background-color: #e8e8e8
      -webkit-transform: scaleY(.5);
      transform: scaleY(.5)
    &:last-child:after
      height: 0
.h1
  font-size: .48rem
.h2
  font-size: .36rem
.h3
  font-size: .32rem
.h4
  font-size: .30rem
.h5
  font-size: .28rem
.h6
  font-size: .24rem

.bold
  font-weight: bold
.v-hide
  visibility: hidden
.hidden
  display: none
.text-danger
  color: #c50000!important

.text-success
  color: #2ec200!important

.text-gary
  color: #9d9d9d

::-webkit-input-placeholder {
  color: #c5c5c5
  font-size: .28rem
}
:-moz-placeholder {
  font-size: .28rem
}
::-moz-placeholder {
  font-size: .28rem
}
:-ms-input-placeholder {
  font-size: .28rem
}

.picker .picker-panel .picker-choose .confirm.confirm-hook {
  color: #0079ff
  font-size: .28rem
}

.picker .picker-panel .picker-choose .cancel.cancel-hook {
  font-size: .28rem
  color: #000
}

